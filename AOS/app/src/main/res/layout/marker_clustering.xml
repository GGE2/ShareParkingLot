<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/marker_circle2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/clur_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000"
        android:fontFamily="@font/kakao_otf_bold"
        android:textColor="@color/black"
        android:textSize="50sp"
        app:layout_constraintTop_toTopOf="@id/marker_circle2"
        app:layout_constraintLeft_toLeftOf="@id/marker_circle2"
        app:layout_constraintRight_toRightOf="@id/marker_circle2"
        app:layout_constraintBottom_toBottomOf="@id/marker_circle2"/>

</androidx.constraintlayout.widget.ConstraintLayout>